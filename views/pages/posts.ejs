<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <h1 class="page-title">所有文章</h1>
        <p class="page-description">探索我们的文章集合</p>
        
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
            <a href="/" class="breadcrumb-link">首页</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-current">文章</span>
        </nav>
    </div>
</div>

<!-- Filter and Search -->
<div class="posts-controls">
    <div class="search-box">
        <form action="/posts" method="GET" class="search-form">
            <div class="search-input-group">
                <input type="text" name="search" placeholder="搜索文章..." value="<%= search || '' %>" class="search-input">
                <button type="submit" class="search-btn">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
    
    <div class="filter-controls">
        <div class="filter-group">
            <label for="category-filter">分类：</label>
            <select id="category-filter" class="filter-select">
                <option value="">全部分类</option>
                <% 
                const allCategories = [...new Set(allPosts.map(post => post.category))];
                %>
                <% allCategories.forEach(cat => { %>
                <option value="<%= cat %>" <%= category === cat ? 'selected' : '' %>><%= cat %></option>
                <% }); %>
            </select>
        </div>
        
        <div class="filter-group">
            <label for="sort-filter">排序：</label>
            <select id="sort-filter" class="filter-select">
                <option value="date-desc" <%= sort === 'date-desc' ? 'selected' : '' %>>最新发布</option>
                <option value="date-asc" <%= sort === 'date-asc' ? 'selected' : '' %>>最早发布</option>
                <option value="title-asc" <%= sort === 'title-asc' ? 'selected' : '' %>>标题 A-Z</option>
                <option value="title-desc" <%= sort === 'title-desc' ? 'selected' : '' %>>标题 Z-A</option>
            </select>
        </div>
        
        <div class="view-toggle">
            <button class="view-btn view-grid active" data-view="grid" title="网格视图">
                <i class="fas fa-th"></i>
            </button>
            <button class="view-btn view-list" data-view="list" title="列表视图">
                <i class="fas fa-list"></i>
            </button>
        </div>
    </div>
</div>

<!-- Posts Count and Info -->
<div class="posts-info">
    <div class="posts-count">
        <% if (search) { %>
        搜索 "<%= search %>" 找到 <strong><%= posts.length %></strong> 篇文章
        <% } else if (category) { %>
        分类 "<%= category %>" 下有 <strong><%= posts.length %></strong> 篇文章
        <% } else { %>
        共有 <strong><%= posts.length %></strong> 篇文章
        <% } %>
    </div>
    
    <% if (search || category) { %>
    <div class="clear-filters">
        <a href="/posts" class="clear-btn">
            <i class="fas fa-times"></i>
            清除筛选
        </a>
    </div>
    <% } %>
</div>

<!-- Posts Grid/List -->
<div class="posts-container">
    <% if (posts && posts.length > 0) { %>
    <div class="posts-grid" id="posts-container">
        <% posts.forEach(post => { %>
        <article class="post-card">
            <% if (post.cover) { %>
            <div class="post-cover">
                <a href="/post/<%= post.slug %>">
                    <img src="<%= post.cover %>" alt="<%= post.title %>" loading="lazy">
                </a>
                <% if (post.featured) { %>
                <div class="post-badge featured-badge">
                    <i class="fas fa-star"></i>
                    精选
                </div>
                <% } %>
            </div>
            <% } %>
            
            <div class="post-content">
                <div class="post-meta">
                    <time class="post-date" datetime="<%= post.date %>">
                        <%= moment(post.date).format('YYYY年MM月DD日') %>
                    </time>
                    <span class="post-category">
                        <a href="/category/<%= post.category %>"><%= post.category %></a>
                    </span>
                    <% if (post.author) { %>
                    <span class="post-author">
                        <i class="fas fa-user"></i>
                        <%= post.author %>
                    </span>
                    <% } %>
                </div>
                
                <h3 class="post-title">
                    <a href="/post/<%= post.slug %>"><%= post.title %></a>
                </h3>
                
                <p class="post-excerpt"><%= post.excerpt %></p>
                
                <div class="post-footer">
                    <div class="post-tags">
                        <% if (post.tags && post.tags.length > 0) { %>
                            <% post.tags.slice(0, 3).forEach(tag => { %>
                            <a href="/tag/<%= tag %>" class="tag">#<%= tag %></a>
                            <% }); %>
                            <% if (post.tags.length > 3) { %>
                            <span class="tag-more">+<%= post.tags.length - 3 %></span>
                            <% } %>
                        <% } %>
                    </div>
                    
                    <div class="post-stats">
                        <span class="reading-time">
                            <i class="fas fa-clock"></i>
                            <%= post.readingTime %> 分钟
                        </span>
                        <% if (post.views) { %>
                        <span class="post-views">
                            <i class="fas fa-eye"></i>
                            <%= post.views %>
                        </span>
                        <% } %>
                    </div>
                </div>
                
                <a href="/post/<%= post.slug %>" class="read-more">阅读全文 →</a>
            </div>
        </article>
        <% }); %>
    </div>
    <% } else { %>
    <div class="empty-state">
        <div class="empty-icon">
            <i class="fas fa-search"></i>
        </div>
        <h3>没有找到文章</h3>
        <% if (search) { %>
        <p>没有找到包含 "<%= search %>" 的文章，请尝试其他关键词。</p>
        <% } else if (category) { %>
        <p>分类 "<%= category %>" 下暂无文章。</p>
        <% } else { %>
        <p>还没有发布任何文章，<a href="/admin">去管理后台</a> 创建第一篇文章吧！</p>
        <% } %>
        
        <div class="empty-actions">
            <a href="/posts" class="btn btn-outline">查看所有文章</a>
            <a href="/" class="btn btn-primary">返回首页</a>
        </div>
    </div>
    <% } %>
</div>

<!-- Load More Button (for infinite scroll) -->
<% if (posts && posts.length > 0 && pagination && pagination.hasNext) { %>
<div class="load-more-container">
    <button class="btn btn-outline load-more-btn" data-page="<%= pagination.nextPage %>">
        <i class="fas fa-plus"></i>
        加载更多
    </button>
</div>
<% } %>

<!-- Pagination -->
<% if (pagination && pagination.total > 1) { %>
<nav class="pagination-nav">
    <div class="pagination">
        <% if (pagination.hasPrev) { %>
        <a href="/posts?page=<%= pagination.prevPage %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link pagination-prev">
            <i class="fas fa-chevron-left"></i>
            上一页
        </a>
        <% } %>
        
        <div class="pagination-pages">
            <% 
            const startPage = Math.max(1, pagination.current - 2);
            const endPage = Math.min(pagination.total, pagination.current + 2);
            %>
            
            <% if (startPage > 1) { %>
            <a href="/posts?page=1<%= search ? '&search=' + encodeURIComponent(search) : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link">1</a>
            <% if (startPage > 2) { %>
            <span class="pagination-ellipsis">...</span>
            <% } %>
            <% } %>
            
            <% for (let i = startPage; i <= endPage; i++) { %>
            <% if (i === pagination.current) { %>
            <span class="pagination-link pagination-current"><%= i %></span>
            <% } else { %>
            <a href="/posts?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link"><%= i %></a>
            <% } %>
            <% } %>
            
            <% if (endPage < pagination.total) { %>
            <% if (endPage < pagination.total - 1) { %>
            <span class="pagination-ellipsis">...</span>
            <% } %>
            <a href="/posts?page=<%= pagination.total %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link"><%= pagination.total %></a>
            <% } %>
        </div>
        
        <% if (pagination.hasNext) { %>
        <a href="/posts?page=<%= pagination.nextPage %><%= search ? '&search=' + encodeURIComponent(search) : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link pagination-next">
            下一页
            <i class="fas fa-chevron-right"></i>
        </a>
        <% } %>
    </div>
    
    <div class="pagination-info">
        第 <%= pagination.current %> 页，共 <%= pagination.total %> 页
    </div>
</nav>
<% } %>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // View toggle functionality
    const viewBtns = document.querySelectorAll('.view-btn');
    const postsContainer = document.getElementById('posts-container');
    
    viewBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const view = this.dataset.view;
            
            // Update active state
            viewBtns.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            
            // Update container class
            postsContainer.className = view === 'list' ? 'posts-list' : 'posts-grid';
            
            // Save preference
            localStorage.setItem('postsView', view);
        });
    });
    
    // Restore saved view preference
    const savedView = localStorage.getItem('postsView');
    if (savedView) {
        const targetBtn = document.querySelector(`[data-view="${savedView}"]`);
        if (targetBtn) {
            targetBtn.click();
        }
    }
    
    // Filter functionality
    const categoryFilter = document.getElementById('category-filter');
    const sortFilter = document.getElementById('sort-filter');
    
    function updateFilters() {
        const params = new URLSearchParams(window.location.search);
        
        if (categoryFilter.value) {
            params.set('category', categoryFilter.value);
        } else {
            params.delete('category');
        }
        
        if (sortFilter.value && sortFilter.value !== 'date-desc') {
            params.set('sort', sortFilter.value);
        } else {
            params.delete('sort');
        }
        
        params.delete('page'); // Reset to first page
        
        const newUrl = window.location.pathname + (params.toString() ? '?' + params.toString() : '');
        window.location.href = newUrl;
    }
    
    if (categoryFilter) {
        categoryFilter.addEventListener('change', updateFilters);
    }
    
    if (sortFilter) {
        sortFilter.addEventListener('change', updateFilters);
    }
    
    // Load more functionality
    const loadMoreBtn = document.querySelector('.load-more-btn');
    if (loadMoreBtn) {
        loadMoreBtn.addEventListener('click', function() {
            const nextPage = this.dataset.page;
            const params = new URLSearchParams(window.location.search);
            params.set('page', nextPage);
            
            // Show loading state
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> 加载中...';
            this.disabled = true;
            
            // Fetch next page (this would need AJAX implementation)
            // For now, just redirect
            setTimeout(() => {
                window.location.href = window.location.pathname + '?' + params.toString();
            }, 500);
        });
    }
    
    // Search form enhancement
    const searchForm = document.querySelector('.search-form');
    const searchInput = document.querySelector('.search-input');
    
    if (searchForm && searchInput) {
        // Auto-submit on input (with debounce)
        let searchTimeout;
        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                if (this.value.length >= 2 || this.value.length === 0) {
                    searchForm.submit();
                }
            }, 500);
        });
        
        // Clear search
        const clearSearch = document.createElement('button');
        clearSearch.type = 'button';
        clearSearch.className = 'search-clear';
        clearSearch.innerHTML = '<i class="fas fa-times"></i>';
        clearSearch.title = '清除搜索';
        
        if (searchInput.value) {
            searchInput.parentNode.appendChild(clearSearch);
            
            clearSearch.addEventListener('click', function() {
                searchInput.value = '';
                searchForm.submit();
            });
        }
    }
});
</script>