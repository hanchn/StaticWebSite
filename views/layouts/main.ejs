<!DOCTYPE html>
<html lang="<%= config.site.language || 'zh-CN' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="<%= description || config.site.description %>">
    <meta name="author" content="<%= config.site.author %>">
    <meta name="keywords" content="<%= meta && meta.keywords ? meta.keywords : config.seo.keywords.join(', ') %>">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= description || config.site.description %>">
    <meta property="og:type" content="<%= meta && meta.type ? meta.type : 'website' %>">
    <meta property="og:url" content="<%= meta && meta.url ? meta.url : config.site.url %>">
    <% if (meta && meta.image) { %>
    <meta property="og:image" content="<%= meta.image %>">
    <% } %>
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= title %>">
    <meta name="twitter:description" content="<%= description || config.site.description %>">
    <% if (meta && meta.image) { %>
    <meta name="twitter:image" content="<%= meta.image %>">
    <% } %>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="<%= config.site.title %> RSS Feed" href="/rss.xml">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/css/highlight.css">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- JSON-LD Structured Data -->
    <% if (typeof jsonLd !== 'undefined' && jsonLd) { %>
    <script type="application/ld+json">
    <%- JSON.stringify(jsonLd, null, 2) %>
    </script>
    <% } %>
</head>
<body>
    <!-- Header -->
    <header class="site-header">
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a href="/" class="brand-link">
                        <h1 class="brand-title"><%= config.site.title %></h1>
                    </a>
                    <p class="brand-description"><%= config.site.description %></p>
                </div>
                
                <div class="navbar-menu">
                    <ul class="navbar-nav">
                        <% config.navigation.forEach(item => { %>
                        <li class="nav-item">
                            <a href="<%= item.url %>" class="nav-link"><%= item.name %></a>
                        </li>
                        <% }); %>
                    </ul>
                    
                    <!-- Mobile Menu Toggle -->
                    <button class="mobile-menu-toggle" aria-label="切换菜单">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main Content -->
    <main class="site-main">
        <div class="container">
            <%- body %>
        </div>
    </main>
    
    <!-- Footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3><%= config.site.title %></h3>
                    <p><%= config.site.description %></p>
                </div>
                
                <div class="footer-section">
                    <h4>快速链接</h4>
                    <ul class="footer-links">
                        <% config.navigation.forEach(item => { %>
                        <li><a href="<%= item.url %>"><%= item.name %></a></li>
                        <% }); %>
                        <li><a href="/rss.xml">RSS 订阅</a></li>
                    </ul>
                </div>
                
                <% if (config.social && (config.social.github || config.social.twitter || config.social.email)) { %>
                <div class="footer-section">
                    <h4>社交媒体</h4>
                    <div class="social-links">
                        <% if (config.social.github) { %>
                        <a href="<%= config.social.github %>" target="_blank" rel="noopener" aria-label="GitHub">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
