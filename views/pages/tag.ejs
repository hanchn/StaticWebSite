<!-- Page Header -->
<div class="page-header tag-header">
    <div class="page-header-content">
        <div class="tag-icon">
            <i class="fas fa-tag"></i>
        </div>
        <h1 class="page-title">标签：<%= tag %></h1>
        <p class="page-description">
            <% if (posts && posts.length > 0) { %>
            共有 <strong><%= posts.length %></strong> 篇文章使用了此标签
            <% } else { %>
            暂无文章使用此标签
            <% } %>
        </p>
        
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
            <a href="/" class="breadcrumb-link">首页</a>
            <span class="breadcrumb-separator">/</span>
            <a href="/posts" class="breadcrumb-link">文章</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-current">#<%= tag %></span>
        </nav>
    </div>
</div>

<!-- Tag Stats -->
<div class="tag-stats">
    <div class="stats-grid">
        <div class="stat-item">
            <div class="stat-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number"><%= posts.length %></div>
                <div class="stat-label">篇文章</div>
            </div>
        </div>
        
        <div class="stat-item">
            <div class="stat-icon">
                <i class="fas fa-folder"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">
                    <% 
                    const categories = new Set(posts.map(post => post.category));
                    %>
                    <%= categories.size %>
                </div>
                <div class="stat-label">个分类</div>
            </div>
        </div>
        
        <div class="stat-item">
            <div class="stat-icon">
                <i class="fas fa-calendar"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">
                    <% if (posts.length > 0) { %>
                    <%= moment(posts[0].date).format('YYYY') %>
                    <% } else { %>
                    -
                    <% } %>
                </div>
                <div class="stat-label">最新使用</div>
            </div>
        </div>
        
        <div class="stat-item">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">
                    <% 
                    const totalReadingTime = posts.reduce((total, post) => {
                        return total + (parseInt(post.readingTime) || 0);
                    }, 0);
                    %>
                    <%= totalReadingTime %>
                </div>
                <div class="stat-label">分钟阅读</div>
            </div>
        </div>
    </div>
</div>

<!-- Filter and Sort -->
<div class="tag-controls">
    <div class="filter-group">
        <label for="category-filter">筛选分类：</label>
        <select id="category-filter" class="filter-select">
            <option value="">全部分类</option>
            <% Array.from(categories).forEach(cat => { %>
            <option value="<%= cat %>" <%= category === cat ? 'selected' : '' %>><%= cat %></option>
            <% }); %>
        </select>
    </div>
    
    <div class="sort-controls">
        <label for="sort-select">排序方式：</label>
        <select id="sort-select" class="sort-select">
            <option value="date-desc" <%= sort === 'date-desc' ? 'selected' : '' %>>最新发布</option>
            <option value="date-asc" <%= sort === 'date-asc' ? 'selected' : '' %>>最早发布</option>
            <option value="title-asc" <%= sort === 'title-asc' ? 'selected' : '' %>>标题 A-Z</option>
            <option value="title-desc" <%= sort === 'title-desc' ? 'selected' : '' %>>标题 Z-A</option>
            <option value="reading-time-asc" <%= sort === 'reading-time-asc' ? 'selected' : '' %>>阅读时间短</option>
            <option value="reading-time-desc" <%= sort === 'reading-time-desc' ? 'selected' : '' %>>阅读时间长</option>
        </select>
    </div>
    
    <div class="view-controls">
        <button class="view-btn view-grid active" data-view="grid" title="网格视图">
            <i class="fas fa-th"></i>
        </button>
        <button class="view-btn view-list" data-view="list" title="列表视图">
            <i class="fas fa-list"></i>
        </button>
        <button class="view-btn view-compact" data-view="compact" title="紧凑视图">
            <i class="fas fa-bars"></i>
        </button>
    </div>
</div>

<!-- Related Categories -->
<% if (categories.size > 0) { %>
<div class="tag-categories">
    <h3 class="categories-title">相关分类</h3>
    <div class="categories-list">
        <% Array.from(categories).forEach(cat => { %>
        <% const categoryPosts = posts.filter(post => post.category === cat); %>
        <a href="/category/<%= cat %>" class="category-item">
            <div class="category-info">
                <span class="category-name"><%= cat %></span>
                <span class="category-count">(<%= categoryPosts.length %>)</span>
            </div>
            <div class="category-icon">
                <i class="fas fa-folder"></i>
            </div>
        </a>
        <% }); %>
    </div>
</div>
<% } %>

<!-- Posts Container -->
<div class="posts-container">
    <% if (posts && posts.length > 0) { %>
    
    <!-- Grid/List View -->
    <div class="posts-grid" id="posts-container">
        <% posts.forEach(post => { %>
        <article class="post-card">
            <% if (post.cover) { %>
            <div class="post-cover">
                <a href="/post/<%= post.slug %>">
                    <img src="<%= post.cover %>" alt="<%= post.title %>" loading="lazy">
                </a>
                <div class="post-category-badge">
                    <a href="/category/<%= post.category %>"><%= post.category %></a>
                </div>
            </div>
            <% } %>
            
            <div class="post-content">
                <div class="post-meta">
                    <time class="post-date" datetime="<%= post.date %>">
                        <%= moment(post.date).format('YYYY年MM月DD日') %>
                    </time>
                    <span class="post-category">
                        <i class="fas fa-folder"></i>
                        <a href="/category/<%= post.category %>"><%= post.category %></a>
                    </span>
                    <% if (post.author) { %>
                    <span class="post-author">
                        <i class="fas fa-user"></i>
                        <%= post.author %>
                    </span>
                    <% } %>
                </div>
                
                <h3 class="post-title">
                    <a href="/post/<%= post.slug %>"><%= post.title %></a>
                </h3>
                
                <p class="post-excerpt"><%= post.excerpt %></p>
                
                <div class="post-footer">
                    <div class="post-tags">
                        <% if (post.tags && post.tags.length > 0) { %>
                            <% post.tags.forEach(postTag => { %>
                            <a href="/tag/<%= postTag %>" class="tag <%= postTag === tag ? 'current-tag' : '' %>">#<%= postTag %></a>
                            <% }); %>
                        <% } %>
                    </div>
                    
                    <div class="post-stats">
                        <span class="reading-time">
                            <i class="fas fa-clock"></i>
                            <%= post.readingTime %> 分钟
                        </span>
                        <% if (post.views) { %>
                        <span class="post-views">
                            <i class="fas fa-eye"></i>
                            <%= post.views %>
                        </span>
                        <% } %>
                    </div>
                </div>
                
                <a href="/post/<%= post.slug %>" class="read-more">阅读全文 →</a>
            </div>
        </article>
        <% }); %>
    </div>
    
    <!-- Compact View -->
    <div class="posts-compact" id="compact-container" style="display: none;">
        <% posts.forEach(post => { %>
        <article class="compact-post">
            <div class="compact-meta">
                <time class="compact-date" datetime="<%= post.date %>">
                    <%= moment(post.date).format('MM-DD') %>
                </time>
                <span class="compact-category">
                    <a href="/category/<%= post.category %>"><%= post.category %></a>
                </span>
            </div>
            
            <div class="compact-content">
                <h4 class="compact-title">
                    <a href="/post/<%= post.slug %>"><%= post.title %></a>
                </h4>
                
                <div class="compact-footer">
                    <div class="compact-tags">
                        <% if (post.tags && post.tags.length > 0) { %>
                            <% post.tags.slice(0, 2).forEach(postTag => { %>
                            <a href="/tag/<%= postTag %>" class="tag <%= postTag === tag ? 'current-tag' : '' %>">#<%= postTag %></a>
                            <% }); %>
                        <% } %>
                    </div>
                    
                    <span class="compact-reading-time">
                        <i class="fas fa-clock"></i>
                        <%= post.readingTime %>分钟
                    </span>
                </div>
            </div>
        </article>
        <% }); %>
    </div>
    
    <% } else { %>
    <div class="empty-state">
        <div class="empty-icon">
            <i class="fas fa-tag"></i>
        </div>
        <h3>该标签下暂无文章</h3>
        <p>标签 "<%= tag %>" 下还没有发布任何文章。</p>
        
        <div class="empty-actions">
            <a href="/posts" class="btn btn-outline">浏览所有文章</a>
            <a href="/" class="btn btn-primary">返回首页</a>
        </div>
    </div>
    <% } %>
</div>

<!-- Pagination -->
<% if (pagination && pagination.total > 1) { %>
<nav class="pagination-nav">
    <div class="pagination">
        <% if (pagination.hasPrev) { %>
        <a href="/tag/<%= tag %>?page=<%= pagination.prevPage %><%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link pagination-prev">
            <i class="fas fa-chevron-left"></i>
            上一页
        </a>
        <% } %>
        
        <div class="pagination-pages">
            <% 
            const startPage = Math.max(1, pagination.current - 2);
            const endPage = Math.min(pagination.total, pagination.current + 2);
            %>
            
            <% if (startPage > 1) { %>
            <a href="/tag/<%= tag %>?page=1<%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link">1</a>
            <% if (startPage > 2) { %>
            <span class="pagination-ellipsis">...</span>
            <% } %>
            <% } %>
            
            <% for (let i = startPage; i <= endPage; i++) { %>
            <% if (i === pagination.current) { %>
            <span class="pagination-link pagination-current"><%= i %></span>
            <% } else { %>
            <a href="/tag/<%= tag %>?page=<%= i %><%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link"><%= i %></a>
            <% } %>
            <% } %>
            
            <% if (endPage < pagination.total) { %>
            <% if (endPage < pagination.total - 1) { %>
            <span class="pagination-ellipsis">...</span>
            <% } %>
            <a href="/tag/<%= tag %>?page=<%= pagination.total %><%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link"><%= pagination.total %></a>
            <% } %>
        </div>
        
        <% if (pagination.hasNext) { %>
        <a href="/tag/<%= tag %>?page=<%= pagination.nextPage %><%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %><%= category ? '&category=' + encodeURIComponent(category) : '' %>" class="pagination-link pagination-next">
            下一页
            <i class="fas fa-chevron-right"></i>
        </a>
        <% } %>
    </div>
    
    <div class="pagination-info">
        第 <%= pagination.current %> 页，共 <%= pagination.total %> 页
    </div>
</nav>
<% } %>

<!-- Related Tags -->
<% 
// 获取相关标签（与当前标签一起出现的其他标签）
const relatedTags = new Map();
posts.forEach(post => {
    if (post.tags && post.tags.includes(tag)) {
        post.tags.forEach(postTag => {
            if (postTag !== tag) {
                relatedTags.set(postTag, (relatedTags.get(postTag) || 0) + 1);
            }
        });
    }
});

const sortedRelatedTags = Array.from(relatedTags.entries())
    .sort((a, b) => b[1] - a[1])
    .slice(0, 8);
%>

<% if (sortedRelatedTags.length > 0) { %>
<section class="related-tags">
    <h2 class="section-title">相关标签</h2>
    <div class="tags-cloud">
        <% sortedRelatedTags.forEach(([relatedTag, count]) => { %>
        <a href="/tag/<%= relatedTag %>" class="tag-cloud-item" data-count="<%= count %>">
            #<%= relatedTag %>
            <span class="tag-count">(<%= count %>)</span>
        </a>
        <% }); %>
    </div>
</section>
<% } %>

<!-- Tag Timeline -->
<% if (posts.length > 0) { %>
<section class="tag-timeline">
    <h2 class="section-title">使用时间线</h2>
    <div class="timeline-chart">
        <% 
        // 按月份统计标签使用情况
        const monthlyUsage = {};
        posts.forEach(post => {
            const month = moment(post.date).format('YYYY-MM');
            monthlyUsage[month] = (monthlyUsage[month] || 0) + 1;
        });
        
        const months = Object.keys(monthlyUsage).sort().slice(-12); // 最近12个月
        const maxUsage = Math.max(...Object.values(monthlyUsage));
        %>
        
        <div class="timeline-months">
            <% months.forEach(month => { %>
            <div class="timeline-month">
                <div class="timeline-bar" style="height: <%= (monthlyUsage[month] / maxUsage * 100) %>%" title="<%= moment(month).format('YYYY年MM月') %>: <%= monthlyUsage[month] %>篇">
                    <span class="timeline-count"><%= monthlyUsage[month] %></span>
                </div>
                <div class="timeline-label"><%= moment(month).format('MM月') %></div>
            </div>
            <% }); %>
        </div>
    </div>
</section>
<% } %>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // View toggle functionality
    const viewBtns = document.querySelectorAll('.view-btn');
    const postsContainer = document.getElementById('posts-container');
    const compactContainer = document.getElementById('compact-container');
    
    viewBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const view = this.dataset.view;
            
            // Update active state
            viewBtns.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            
            // Update container visibility and class
            if (view === 'compact') {
                postsContainer.style.display = 'none';
                compactContainer.style.display = 'block';
            } else {
                postsContainer.style.display = 'block';
                compactContainer.style.display = 'none';
                
                // Update grid/list class
                postsContainer.className = view === 'list' ? 'posts-list' : 'posts-grid';
            }
            
            // Save preference
            localStorage.setItem('tagView', view);
        });
    });
    
    // Restore saved view preference
    const savedView = localStorage.getItem('tagView');
    if (savedView) {
        const targetBtn = document.querySelector(`[data-view="${savedView}"]`);
        if (targetBtn) {
            targetBtn.click();
        }
    }
    
    // Filter and sort functionality
    const categoryFilter = document.getElementById('category-filter');
    const sortSelect = document.getElementById('sort-select');
    
    function updateFilters() {
        const params = new URLSearchParams(window.location.search);
        
        if (categoryFilter.value) {
            params.set('category', categoryFilter.value);
        } else {
            params.delete('category');
        }
        
        if (sortSelect.value && sortSelect.value !== 'date-desc') {
            params.set('sort', sortSelect.value);
        } else {
            params.delete('sort');
        }
        
        params.delete('page'); // Reset to first page
        
        const newUrl = window.location.pathname + (params.toString() ? '?' + params.toString() : '');
        window.location.href = newUrl;
    }
    
    if (categoryFilter) {
        categoryFilter.addEventListener('change', updateFilters);
    }
    
    if (sortSelect) {
        sortSelect.addEventListener('change', updateFilters);
    }
    
    // Related tags cloud styling
    const tagCloudItems = document.querySelectorAll('.tag-cloud-item');
    if (tagCloudItems.length > 0) {
        const maxCount = Math.max(...Array.from(tagCloudItems).map(item => parseInt(item.dataset.count)));
        
        tagCloudItems.forEach(item => {
            const count = parseInt(item.dataset.count);
            const size = Math.max(0.8, Math.min(1.8, count / maxCount * 1.8));
            const opacity = Math.max(0.6, count / maxCount);
            
            item.style.fontSize = size + 'em';
            item.style.opacity = opacity;
            
            // Add hover effect
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.1)';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });
    }
    
    // Timeline chart animation
    const timelineBars = document.querySelectorAll('.timeline-bar');
    
    function animateTimeline() {
        timelineBars.forEach((bar, index) => {
            setTimeout(() => {
                bar.style.transform = 'scaleY(1)';
                bar.style.opacity = '1';
            }, index * 100);
        });
    }
    
    // Intersection Observer for timeline animation
    if ('IntersectionObserver' in window) {
        const timelineObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateTimeline();
                    timelineObserver.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.5
        });
        
        const timelineChart = document.querySelector('.timeline-chart');
        if (timelineChart) {
            // Initialize bars as hidden
            timelineBars.forEach(bar => {
                bar.style.transform = 'scaleY(0)';
                bar.style.opacity = '0';
                bar.style.transformOrigin = 'bottom';
                bar.style.transition = 'transform 0.5s ease, opacity 0.5s ease';
            });
            
            timelineObserver.observe(timelineChart);
        }
    } else {
        // Fallback for older browsers
        animateTimeline();
    }
    
    // Search within tag
    const searchInput = document.createElement('input');
    searchInput.type = 'text';
    searchInput.placeholder = `在标签 #${document.querySelector('.page-title').textContent.replace('标签：', '')} 中搜索...`;
    searchInput.className = 'tag-search';
    
    const controlsContainer = document.querySelector('.tag-controls');
    if (controlsContainer) {
        const searchContainer = document.createElement('div');
        searchContainer.className = 'search-container';
        searchContainer.appendChild(searchInput);
        controlsContainer.insertBefore(searchContainer, controlsContainer.firstChild);
        
        // Search functionality
        let searchTimeout;
        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            const query = this.value.toLowerCase().trim();
            
            searchTimeout = setTimeout(() => {
                const postCards = document.querySelectorAll('.post-card, .compact-post');
                
                postCards.forEach(card => {
                    const title = card.querySelector('.post-title, .compact-title')?.textContent.toLowerCase() || '';
                    const excerpt = card.querySelector('.post-excerpt')?.textContent.toLowerCase() || '';
                    
                    const matches = !query || title.includes(query) || excerpt.includes(query);
                    card.style.display = matches ? 'block' : 'none';
                });
                
                // Update results count
                const visibleCards = Array.from(postCards).filter(card => card.style.display !== 'none');
                updateSearchResults(visibleCards.length, query);
            }, 300);
        });
    }
    
    function updateSearchResults(count, query) {
        let resultsInfo = document.querySelector('.search-results-info');
        if (!resultsInfo) {
            resultsInfo = document.createElement('div');
            resultsInfo.className = 'search-results-info';
            document.querySelector('.posts-container').insertBefore(resultsInfo, document.querySelector('.posts-container').firstChild);
        }
        
        if (query) {
            resultsInfo.textContent = `找到 ${count} 篇包含 "${query}" 的文章`;
            resultsInfo.style.display = 'block';
        } else {
            resultsInfo.style.display = 'none';
        }
    }
    
    // Highlight current tag
    const currentTags = document.querySelectorAll('.current-tag');
    currentTags.forEach(tag => {
        tag.style.background = 'linear-gradient(45deg, #667eea 0%, #764ba2 100%)';
        tag.style.color = 'white';
        tag.style.fontWeight = 'bold';
    });
});
</script>