  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.5rem;
  margin-top: 3rem;
}

.page-link,
.page-number {
  display: inline-block;
  padding: 0.5rem 0.75rem;
  border: 1px solid #d1d5db;
  border-radius: 0.375rem;
  text-decoration: none;
  color: #374151;
  font-size: 0.875rem;
  transition: all 0.3s ease;
}

.page-link:hover,
.page-number:hover {
  background: #f9fafb;
  border-color: #9ca3af;
}

.page-number.current {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.page-ellipsis {
  padding: 0.5rem 0.25rem;
  color: #9ca3af;
}

.page-numbers {
  display: flex;
  gap: 0.25rem;
  align-items: center;
}

/* Responsive */
@media (max-width: 768px) {
  .posts-page {
    padding: 1rem;
  }
  
  .page-title {
    font-size: 2rem;
  }
  
  .filter-controls {
    grid-template-columns: 1fr;
  }
  
  .search-box {
    flex-direction: column;
  }
  
  .posts-grid {
    grid-template-columns: 1fr;
  }
  
  .post-meta {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .pagination {
    flex-wrap: wrap;
  }
}

/* Hidden class for filtering */
.hidden {
  display: none !important;
}
</style>

<script>
let allPosts = [];

// 初始化
document.addEventListener('DOMContentLoaded', function() {
  // 收集所有文章数据
  const postCards = document.querySelectorAll('.post-card');
  allPosts = Array.from(postCards).map(card => ({
    element: card,
    title: card.dataset.title,
    category: card.dataset.category,
    tags: card.dataset.tags,
    date: card.dataset.date
  }));
});

// 筛选文章
function filterPosts() {
  const categoryFilter = document.getElementById('category-filter').value;
  const tagFilter = document.getElementById('tag-filter').value;
  
  let visibleCount = 0;
  
  allPosts.forEach(post => {
    let show = true;
    
    // 分类筛选
    if (categoryFilter && !post.category.includes(categoryFilter)) {
      show = false;
    }
    
    // 标签筛选
    if (tagFilter && !post.tags.includes(tagFilter)) {
      show = false;
    }
    
    if (show) {
      post.element.classList.remove('hidden');
      visibleCount++;
    } else {
      post.element.classList.add('hidden');
    }
  });
  
  toggleNoResults(visibleCount === 0);
}

// 搜索文章
function searchPosts() {
  const searchTerm = document.getElementById('search-input').value.toLowerCase();
  const clearBtn = document.getElementById('clear-search');
  
  if (searchTerm) {
    clearBtn.style.display = 'block';
  } else {
    clearBtn.style.display = 'none';
  }
  
  let visibleCount = 0;
  
  allPosts.forEach(post => {
    const matchesSearch = !searchTerm || 
      post.title.includes(searchTerm) ||
      post.category.toLowerCase().includes(searchTerm) ||
      post.tags.toLowerCase().includes(searchTerm);
    
    if (matchesSearch) {
      post.element.classList.remove('hidden');
      visibleCount++;
    } else {
      post.element.classList.add('hidden');
    }
  });
  
  toggleNoResults(visibleCount === 0);
}

// 排序文章
function sortPosts() {
  const sortBy = document.getElementById('sort-filter').value;
  const postsGrid = document.getElementById('posts-grid');
  
  const sortedPosts = [...allPosts].sort((a, b) => {
    switch (sortBy) {
      case 'date-desc':
        return new Date(b.date) - new Date(a.date);
      case 'date-asc':
        return new Date(a.date) - new Date(b.date);
      case 'title-asc':
        return a.title.localeCompare(b.title);
      case 'title-desc':
        return b.title.localeCompare(a.title);
      default:
        return 0;
    }
  });
  
  // 重新排列DOM元素
  sortedPosts.forEach(post => {
    postsGrid.appendChild(post.element);
  });
}

// 清除搜索
function clearSearch() {
  document.getElementById('search-input').value = '';
  document.getElementById('clear-search').style.display = 'none';
  searchPosts();
}

// 清除所有筛选
function clearAllFilters() {
  document.getElementById('category-filter').value = '';
  document.getElementById('tag-filter').value = '';
  document.getElementById('sort-filter').value = 'date-desc';
  clearSearch();
  
  allPosts.forEach(post => {
    post.element.classList.remove('hidden');
  });
  
  sortPosts();
  toggleNoResults(false);
}

// 切换无结果显示
function toggleNoResults(show) {
  const noResults = document.getElementById('no-results');
  const postsGrid = document.getElementById('posts-grid');
  
  if (show) {
    noResults.style.display = 'block';
    postsGrid.style.display = 'none';
  } else {
    noResults.style.display = 'none';
    postsGrid.style.display = 'grid';
  }
}
</script>