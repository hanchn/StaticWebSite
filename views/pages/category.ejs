<!-- Page Header -->
<div class="page-header category-header">
    <div class="page-header-content">
        <div class="category-icon">
            <i class="fas fa-folder-open"></i>
        </div>
        <h1 class="page-title">分类：<%= category %></h1>
        <p class="page-description">
            <% if (posts && posts.length > 0) { %>
            共有 <strong><%= posts.length %></strong> 篇文章
            <% } else { %>
            暂无文章
            <% } %>
        </p>
        
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
            <a href="/" class="breadcrumb-link">首页</a>
            <span class="breadcrumb-separator">/</span>
            <a href="/posts" class="breadcrumb-link">文章</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-current"><%= category %></span>
        </nav>
    </div>
</div>

<!-- Category Stats -->
<div class="category-stats">
    <div class="stats-grid">
        <div class="stat-item">
            <div class="stat-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number"><%= posts.length %></div>
                <div class="stat-label">篇文章</div>
            </div>
        </div>
        
        <div class="stat-item">
            <div class="stat-icon">
                <i class="fas fa-calendar"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">
                    <% if (posts.length > 0) { %>
                    <%= moment(posts[0].date).format('YYYY') %>
                    <% } else { %>
                    -
                    <% } %>
                </div>
                <div class="stat-label">最新发布</div>
            </div>
        </div>
        
        <div class="stat-item">
            <div class="stat-icon">
                <i class="fas fa-tags"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">
                    <% 
                    const allTags = new Set();
                    posts.forEach(post => {
                        if (post.tags) {
                            post.tags.forEach(tag => allTags.add(tag));
                        }
                    });
                    %>
                    <%= allTags.size %>
                </div>
                <div class="stat-label">个标签</div>
            </div>
        </div>
        
        <div class="stat-item">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">
                    <% 
                    const totalReadingTime = posts.reduce((total, post) => {
                        return total + (parseInt(post.readingTime) || 0);
                    }, 0);
                    %>
                    <%= totalReadingTime %>
                </div>
                <div class="stat-label">分钟阅读</div>
            </div>
        </div>
    </div>
</div>

<!-- Filter and Sort -->
<div class="category-controls">
    <div class="sort-controls">
        <label for="sort-select">排序方式：</label>
        <select id="sort-select" class="sort-select">
            <option value="date-desc" <%= sort === 'date-desc' ? 'selected' : '' %>>最新发布</option>
            <option value="date-asc" <%= sort === 'date-asc' ? 'selected' : '' %>>最早发布</option>
            <option value="title-asc" <%= sort === 'title-asc' ? 'selected' : '' %>>标题 A-Z</option>
            <option value="title-desc" <%= sort === 'title-desc' ? 'selected' : '' %>>标题 Z-A</option>
            <option value="reading-time-asc" <%= sort === 'reading-time-asc' ? 'selected' : '' %>>阅读时间短</option>
            <option value="reading-time-desc" <%= sort === 'reading-time-desc' ? 'selected' : '' %>>阅读时间长</option>
        </select>
    </div>
    
    <div class="view-controls">
        <button class="view-btn view-grid active" data-view="grid" title="网格视图">
            <i class="fas fa-th"></i>
        </button>
        <button class="view-btn view-list" data-view="list" title="列表视图">
            <i class="fas fa-list"></i>
        </button>
        <button class="view-btn view-timeline" data-view="timeline" title="时间线视图">
            <i class="fas fa-stream"></i>
        </button>
    </div>
</div>

<!-- Category Tags Cloud -->
<% if (allTags.size > 0) { %>
<div class="category-tags">
    <h3 class="tags-title">相关标签</h3>
    <div class="tags-cloud">
        <% 
        const tagsArray = Array.from(allTags);
        const tagCounts = {};
        posts.forEach(post => {
            if (post.tags) {
                post.tags.forEach(tag => {
                    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
                });
            }
        });
        %>
        <% tagsArray.forEach(tag => { %>
        <a href="/tag/<%= tag %>" class="tag-cloud-item" data-count="<%= tagCounts[tag] %>">
            #<%= tag %>
            <span class="tag-count">(<%= tagCounts[tag] %>)</span>
        </a>
        <% }); %>
    </div>
</div>
<% } %>

<!-- Posts Container -->
<div class="posts-container">
    <% if (posts && posts.length > 0) { %>
    
    <!-- Grid/List View -->
    <div class="posts-grid" id="posts-container">
        <% posts.forEach(post => { %>
        <article class="post-card">
            <% if (post.cover) { %>
            <div class="post-cover">
                <a href="/post/<%= post.slug %>">
                    <img src="<%= post.cover %>" alt="<%= post.title %>" loading="lazy">
                </a>
            </div>
            <% } %>
            
            <div class="post-content">
                <div class="post-meta">
                    <time class="post-date" datetime="<%= post.date %>">
                        <%= moment(post.date).format('YYYY年MM月DD日') %>
                    </time>
                    <% if (post.author) { %>
                    <span class="post-author">
                        <i class="fas fa-user"></i>
                        <%= post.author %>
                    </span>
                    <% } %>
                </div>
                
                <h3 class="post-title">
                    <a href="/post/<%= post.slug %>"><%= post.title %></a>
                </h3>
                
                <p class="post-excerpt"><%= post.excerpt %></p>
                
                <div class="post-footer">
                    <div class="post-tags">
                        <% if (post.tags && post.tags.length > 0) { %>
                            <% post.tags.slice(0, 3).forEach(tag => { %>
                            <a href="/tag/<%= tag %>" class="tag">#<%= tag %></a>
                            <% }); %>
                            <% if (post.tags.length > 3) { %>
                            <span class="tag-more">+<%= post.tags.length - 3 %></span>
                            <% } %>
                        <% } %>
                    </div>
                    
                    <div class="post-stats">
                        <span class="reading-time">
                            <i class="fas fa-clock"></i>
                            <%= post.readingTime %> 分钟
                        </span>
                    </div>
                </div>
                
                <a href="/post/<%= post.slug %>" class="read-more">阅读全文 →</a>
            </div>
        </article>
        <% }); %>
    </div>
    
    <!-- Timeline View -->
    <div class="posts-timeline" id="timeline-container" style="display: none;">
        <% 
        // Group posts by year
        const postsByYear = {};
        posts.forEach(post => {
            const year = moment(post.date).format('YYYY');
            if (!postsByYear[year]) {
                postsByYear[year] = [];
            }
            postsByYear[year].push(post);
        });
        
        const years = Object.keys(postsByYear).sort((a, b) => b - a);
        %>
        
        <% years.forEach(year => { %>
        <div class="timeline-year">
            <h3 class="timeline-year-title"><%= year %> 年</h3>
            <div class="timeline-posts">
                <% postsByYear[year].forEach(post => { %>
                <div class="timeline-item">
                    <div class="timeline-date">
                        <%= moment(post.date).format('MM-DD') %>
                    </div>
                    <div class="timeline-content">
                        <h4 class="timeline-title">
                            <a href="/post/<%= post.slug %>"><%= post.title %></a>
                        </h4>
                        <p class="timeline-excerpt"><%= post.excerpt %></p>
                        <div class="timeline-meta">
                            <% if (post.tags && post.tags.length > 0) { %>
                            <div class="timeline-tags">
                                <% post.tags.slice(0, 2).forEach(tag => { %>
                                <a href="/tag/<%= tag %>" class="tag">#<%= tag %></a>
                                <% }); %>
                            </div>
                            <% } %>
                            <span class="timeline-reading-time">
                                <i class="fas fa-clock"></i>
                                <%= post.readingTime %> 分钟
                            </span>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        <% }); %>
    </div>
    
    <% } else { %>
    <div class="empty-state">
        <div class="empty-icon">
            <i class="fas fa-folder-open"></i>
        </div>
        <h3>该分类下暂无文章</h3>
        <p>分类 "<%= category %>" 下还没有发布任何文章。</p>
        
        <div class="empty-actions">
            <a href="/posts" class="btn btn-outline">浏览所有文章</a>
            <a href="/" class="btn btn-primary">返回首页</a>
        </div>
    </div>
    <% } %>
</div>

<!-- Pagination -->
<% if (pagination && pagination.total > 1) { %>
<nav class="pagination-nav">
    <div class="pagination">
        <% if (pagination.hasPrev) { %>
        <a href="/category/<%= category %>?page=<%= pagination.prevPage %><%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %>" class="pagination-link pagination-prev">
            <i class="fas fa-chevron-left"></i>
            上一页
        </a>
        <% } %>
        
        <div class="pagination-pages">
            <% 
            const startPage = Math.max(1, pagination.current - 2);
            const endPage = Math.min(pagination.total, pagination.current + 2);
            %>
            
            <% if (startPage > 1) { %>
            <a href="/category/<%= category %>?page=1<%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %>" class="pagination-link">1</a>
            <% if (startPage > 2) { %>
            <span class="pagination-ellipsis">...</span>
            <% } %>
            <% } %>
            
            <% for (let i = startPage; i <= endPage; i++) { %>
            <% if (i === pagination.current) { %>
            <span class="pagination-link pagination-current"><%= i %></span>
            <% } else { %>
            <a href="/category/<%= category %>?page=<%= i %><%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %>" class="pagination-link"><%= i %></a>
            <% } %>
            <% } %>
            
            <% if (endPage < pagination.total) { %>
            <% if (endPage < pagination.total - 1) { %>
            <span class="pagination-ellipsis">...</span>
            <% } %>
            <a href="/category/<%= category %>?page=<%= pagination.total %><%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %>" class="pagination-link"><%= pagination.total %></a>
            <% } %>
        </div>
        
        <% if (pagination.hasNext) { %>
        <a href="/category/<%= category %>?page=<%= pagination.nextPage %><%= sort && sort !== 'date-desc' ? '&sort=' + sort : '' %>" class="pagination-link pagination-next">
            下一页
            <i class="fas fa-chevron-right"></i>
        </a>
        <% } %>
    </div>
    
    <div class="pagination-info">
        第 <%= pagination.current %> 页，共 <%= pagination.total %> 页
    </div>
</nav>
<% } %>

<!-- Related Categories -->
<% 
// 获取其他分类（简化处理）
const otherCategories = ['技术', '生活', '随笔', '教程', '思考'].filter(cat => cat !== category).slice(0, 4);
%>
<% if (otherCategories.length > 0) { %>
<section class="related-categories">
    <h2 class="section-title">其他分类</h2>
    <div class="categories-grid">
        <% otherCategories.forEach(cat => { %>
        <div class="category-card">
            <a href="/category/<%= cat %>" class="category-link">
                <div class="category-icon">
                    <i class="fas fa-folder"></i>
                </div>
                <h3 class="category-name"><%= cat %></h3>
                <p class="category-description">浏览 <%= cat %> 分类下的文章</p>
            </a>
        </div>
        <% }); %>
    </div>
</section>
<% } %>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // View toggle functionality
    const viewBtns = document.querySelectorAll('.view-btn');
    const postsContainer = document.getElementById('posts-container');
    const timelineContainer = document.getElementById('timeline-container');
    
    viewBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const view = this.dataset.view;
            
            // Update active state
            viewBtns.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            
            // Update container visibility
            if (view === 'timeline') {
                postsContainer.style.display = 'none';
                timelineContainer.style.display = 'block';
            } else {
                postsContainer.style.display = 'block';
                timelineContainer.style.display = 'none';
                
                // Update grid/list class
                postsContainer.className = view === 'list' ? 'posts-list' : 'posts-grid';
            }
            
            // Save preference
            localStorage.setItem('categoryView', view);
        });
    });
    
    // Restore saved view preference
    const savedView = localStorage.getItem('categoryView');
    if (savedView) {
        const targetBtn = document.querySelector(`[data-view="${savedView}"]`);
        if (targetBtn) {
            targetBtn.click();
        }
    }
    
    // Sort functionality
    const sortSelect = document.getElementById('sort-select');
    if (sortSelect) {
        sortSelect.addEventListener('change', function() {
            const params = new URLSearchParams(window.location.search);
            
            if (this.value && this.value !== 'date-desc') {
                params.set('sort', this.value);
            } else {
                params.delete('sort');
            }
            
            params.delete('page'); // Reset to first page
            
            const newUrl = window.location.pathname + (params.toString() ? '?' + params.toString() : '');
            window.location.href = newUrl;
        });
    }
    
    // Tag cloud styling
    const tagCloudItems = document.querySelectorAll('.tag-cloud-item');
    tagCloudItems.forEach(item => {
        const count = parseInt(item.dataset.count);
        const maxCount = Math.max(...Array.from(tagCloudItems).map(i => parseInt(i.dataset.count)));
        const size = Math.max(0.8, Math.min(1.5, count / maxCount * 1.5));
        
        item.style.fontSize = size + 'em';
        item.style.opacity = Math.max(0.6, count / maxCount);
    });
    
    // Smooth scroll for timeline
    const timelineItems = document.querySelectorAll('.timeline-item');
    
    function animateTimelineItems() {
        timelineItems.forEach((item, index) => {
            const rect = item.getBoundingClientRect();
            const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
            
            if (isVisible) {
                setTimeout(() => {
                    item.classList.add('animate');
                }, index * 100);
            }
        });
    }
    
    // Intersection Observer for timeline animation
    if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate');
                }
            });
        }, {
            threshold: 0.1,
            rootMargin: '50px'
        });
        
        timelineItems.forEach(item => {
            observer.observe(item);
        });
    } else {
        // Fallback for older browsers
        window.addEventListener('scroll', animateTimelineItems);
        animateTimelineItems();
    }
    
    // Search within category
    const searchInput = document.createElement('input');
    searchInput.type = 'text';
    searchInput.placeholder = `在 ${document.querySelector('.page-title').textContent.replace('分类：', '')} 分类中搜索...`;
    searchInput.className = 'category-search';
    
    const controlsContainer = document.querySelector('.category-controls');
    if (controlsContainer) {
        const searchContainer = document.createElement('div');
        searchContainer.className = 'search-container';
        searchContainer.appendChild(searchInput);
        controlsContainer.insertBefore(searchContainer, controlsContainer.firstChild);
        
        // Search functionality
        let searchTimeout;
        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            const query = this.value.toLowerCase().trim();
            
            searchTimeout = setTimeout(() => {
                const postCards = document.querySelectorAll('.post-card, .timeline-item');
                
                postCards.forEach(card => {
                    const title = card.querySelector('.post-title, .timeline-title')?.textContent.toLowerCase() || '';
                    const excerpt = card.querySelector('.post-excerpt, .timeline-excerpt')?.textContent.toLowerCase() || '';
                    
                    const matches = !query || title.includes(query) || excerpt.includes(query);
                    card.style.display = matches ? '' : 'none';
                });
                
                // Update results count
                const visibleCards = Array.from(postCards).filter(card => card.style.display !== 'none');
                updateSearchResults(visibleCards.length, query);
            }, 300);
        });
    }
    
    function updateSearchResults(count, query) {
        let resultsInfo = document.querySelector('.search-results-info');
        if (!resultsInfo) {
            resultsInfo = document.createElement('div');
            resultsInfo.className = 'search-results-info';
            document.querySelector('.posts-container').insertBefore(resultsInfo, document.querySelector('.posts-container').firstChild);
        }
        
        if (query) {
            resultsInfo.textContent = `找到 ${count} 篇包含 "${query}" 的文章`;
            resultsInfo.style.display = 'block';
        } else {
            resultsInfo.style.display = 'none';
        }
    }
});
</script>