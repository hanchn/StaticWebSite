<% layout('layouts/default') %>

<div class="posts-page">
  <!-- Page Header -->
  <header class="page-header">
    <h1 class="page-title">所有文章</h1>
    <p class="page-description">共 <%= posts.length %> 篇文章</p>
  </header>
  
  <!-- Filter and Sort -->
  <div class="posts-controls">
    <div class="filter-controls">
      <div class="filter-group">
        <label for="category-filter">分类筛选:</label>
        <select id="category-filter" onchange="filterPosts()">
          <option value="">全部分类</option>
          <% if (categories) { %>
            <% Object.keys(categories).forEach(category => { %>
              <option value="<%= category %>"><%= category %> (<%= categories[category].length %>)</option>
            <% }) %>
          <% } %>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="tag-filter">标签筛选:</label>
        <select id="tag-filter" onchange="filterPosts()">
          <option value="">全部标签</option>
          <% if (tags) { %>
            <% Object.keys(tags).forEach(tag => { %>
              <option value="<%= tag %>"><%= tag %> (<%= tags[tag].length %>)</option>
            <% }) %>
          <% } %>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="sort-filter">排序方式:</label>
        <select id="sort-filter" onchange="sortPosts()">
          <option value="date-desc">最新发布</option>
          <option value="date-asc">最早发布</option>
          <option value="title-asc">标题 A-Z</option>
          <option value="title-desc">标题 Z-A</option>
        </select>
      </div>
    </div>
    
    <div class="search-box">
      <input type="text" id="search-input" placeholder="搜索文章..." onkeyup="searchPosts()">
      <button type="button" onclick="clearSearch()" id="clear-search" style="display: none;">清除</button>
    </div>
  </div>
  
  <!-- Posts Grid -->
  <div class="posts-container">
    <div class="posts-grid" id="posts-grid">
      <% posts.forEach(post => { %>
        <article class="post-card" 
                 data-category="<%= post.categories ? post.categories.join(',') : '' %>"
                 data-tags="<%= post.tags ? post.tags.join(',') : '' %>"
                 data-title="<%= post.title.toLowerCase() %>"
                 data-date="<%= post.date %>">
          <% if (post.cover || post.image) { %>
            <div class="post-cover">
              <a href="<%= post.url %>">
                <img src="<%= post.cover || post.image %>" alt="<%= post.title %>" loading="lazy">
              </a>
              <% if (post.featured) { %>
                <span class="featured-badge">推荐</span>
              <% } %>
            </div>
          <% } %>
          
          <div class="post-content">
            <header class="post-header">
              <h3 class="post-title">
                <a href="<%= post.url %>"><%= post.title %></a>
              </h3>
              
              <div class="post-meta">
                <time datetime="<%= formatDate(post.date, 'YYYY-MM-DD') %>">
                  <%= formatDate(post.date, 'YYYY年MM月DD日') %>
                </time>
                
                <% if (post.categories && post.categories.length > 0) { %>
                  <span class="post-category">
                    <a href="/categories/<%= slugify(post.categories[0]) %>"><%= post.categories[0] %></a>
                  </span>
                <% } %>
                
                <% if (post.readingTime) { %>
                  <span class="reading-time"><%= post.readingTime %>分钟阅读</span>
                <% } %>
              </div>
            </header>
            
            <% if (post.excerpt) { %>
              <div class="post-excerpt">
                <p><%= post.excerpt %></p>
              </div>
            <% } %>
            
            <% if (post.tags && post.tags.length > 0) { %>
              <div class="post-tags">
                <% post.tags.slice(0, 3).forEach(tag => { %>
                  <a href="/tags/<%= slugify(tag) %>" class="tag">#<%= tag %></a>
                <% }) %>
                <% if (post.tags.length > 3) { %>
                  <span class="more-tags">+<%= post.tags.length - 3 %></span>
                <% } %>
              </div>
            <% } %>
            
            <div class="post-stats">
              <% if (post.wordCount) { %>
                <span class="word-count"><%= post.wordCount %> 字</span>
              <% } %>
              <% if (post.views) { %>
                <span class="view-count"><%= post.views %> 次阅读</span>
              <% } %>
            </div>
          </div>
        </article>
      <% }) %>
    </div>
    
    <!-- No Results -->
    <div class="no-results" id="no-results" style="display: none;">
      <div class="no-results-content">
        <h3>没有找到匹配的文章</h3>
        <p>尝试调整筛选条件或搜索关键词</p>
        <button onclick="clearAllFilters()" class="btn btn-primary">清除所有筛选</button>
      </div>
    </div>
  </div>
  
  <!-- Pagination -->
  <% if (pagination && pagination.total > 1) { %>
    <nav class="pagination">
      <% if (pagination.prev) { %>
        <a href="<%= pagination.prev.url %>" class="page-link prev">
          ← 上一页
        </a>
      <% } %>
      
      <div class="page-numbers">
        <% for (let i = 1; i <= pagination.total; i++) { %>
          <% if (i === pagination.current) { %>
            <span class="page-number current"><%= i %></span>
          <% } else if (Math.abs(i - pagination.current) <= 2 || i === 1 || i === pagination.total) { %>
            <a href="<%= pagination.getPageUrl(i) %>" class="page-number"><%= i %></a>
          <% } else if (Math.abs(i - pagination.current) === 3) { %>
            <span class="page-ellipsis">...</span>
          <% } %>
        <% } %>
      </div>
      
      <% if (pagination.next) { %>
        <a href="<%= pagination.next.url %>" class="page-link next">
          下一页 →
        </a>
      <% } %>
    </nav>
  <% } %>
</div>

<style>
