<% layout('layouts/default') %>

<article class="doc">
  <header class="doc-header">
    <h1 class="doc-title"><%= page.title %></h1>
    <% if (page.description) { %>
      <p class="doc-description"><%= page.description %></p>
    <% } %>
    
    <% if (page.date) { %>
      <div class="doc-meta">
        <time datetime="<%= formatDate(page.date, 'YYYY-MM-DD') %>">
          <%= formatDate(page.date, 'YYYY年MM月DD日') %>
        </time>
      </div>
    <% } %>
  </header>
  
  <div class="doc-content">
    <%- content %>
  </div>
  
  <% if (page.tags && page.tags.length > 0) { %>
    <footer class="doc-footer">
      <div class="doc-tags">
        <span class="tags-label">标签：</span>
        <% page.tags.forEach(tag => { %>
          <a href="/tags/<%= slugify(tag) %>" class="tag">#<%= tag %></a>
        <% }) %>
      </div>
    </footer>
  <% } %>
</article>

<style>
.doc {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 0;
}

.doc-header {
  text-align: center;
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 1px solid #e5e5e5;
}

.doc-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #333;
  margin-bottom: 1rem;
}

.doc-description {
  font-size: 1.2rem;
  color: #666;
  margin-bottom: 1rem;
}

.doc-meta {
  color: #888;
  font-size: 0.9rem;
}

.doc-content {
  line-height: 1.8;
  color: #444;
}

.doc-content h2 {
  font-size: 1.8rem;
  margin: 2rem 0 1rem;
  color: #333;
  border-bottom: 2px solid #667eea;
  padding-bottom: 0.5rem;
}

.doc-content h3 {
  font-size: 1.4rem;
  margin: 1.5rem 0 0.5rem;
  color: #333;
}

.doc-content h4 {
  font-size: 1.2rem;
  margin: 1rem 0 0.5rem;
  color: #333;
}

.doc-content p {
  margin-bottom: 1rem;
}

.doc-content ul,
.doc-content ol {
  margin-bottom: 1rem;
  padding-left: 2rem;
}

.doc-content li {
  margin-bottom: 0.5rem;
}

.doc-content blockquote {
  border-left: 4px solid #667eea;
  padding-left: 1rem;
  margin: 1.5rem 0;
  font-style: italic;
  color: #666;
  background: #f8f9fa;
  padding: 1rem;
  border-radius: 0.25rem;
}

.doc-content code {
  background: #f5f5f5;
  padding: 0.2rem 0.4rem;
  border-radius: 0.25rem;
  font-family: 'Monaco', 'Consolas', monospace;
  font-size: 0.9rem;
  color: #e83e8c;
}

.doc-content pre {
  background: #f5f5f5;
  padding: 1rem;
  border-radius: 0.5rem;
  overflow-x: auto;
  margin: 1rem 0;
  border: 1px solid #e5e5e5;
}

.doc-content pre code {
  background: none;
  padding: 0;
  color: #333;
}

.doc-content table {
  width: 100%;
  border-collapse: collapse;
  margin: 1rem 0;
}

.doc-content th,
.doc-content td {
  border: 1px solid #e5e5e5;
  padding: 0.5rem;
  text-align: left;
}

.doc-content th {
  background: #f8f9fa;
  font-weight: 600;
}

.doc-footer {
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid #e5e5e5;
}

.doc-tags {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tags-label {
  color: #666;
  font-weight: 500;
}

.tag {
  display: inline-block;
  background: #667eea;
  color: white;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  text-decoration: none;
  font-size: 0.8rem;
  transition: background 0.3s ease;
}

.tag:hover {
  background: #5a6fd8;
  color: white;
}
</style>