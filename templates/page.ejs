<% layout('layouts/default') %>

<article class="page">
  <header class="page-header">
    <h1 class="page-title"><%= page.title %></h1>
    <% if (page.description) { %>
      <p class="page-description"><%= page.description %></p>
    <% } %>
  </header>
  
  <div class="page-content">
    <%- content %>
  </div>
</article>

<style>
.page {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 0;
}

.page-header {
  text-align: center;
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 1px solid #e5e5e5;
}

.page-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #333;
  margin-bottom: 1rem;
}

.page-description {
  font-size: 1.2rem;
  color: #666;
  margin: 0;
}

.page-content {
  line-height: 1.8;
  color: #444;
}

.page-content h2 {
  font-size: 1.8rem;
  margin: 2rem 0 1rem;
  color: #333;
}

.page-content h3 {
  font-size: 1.4rem;
  margin: 1.5rem 0 0.5rem;
  color: #333;
}

.page-content p {
  margin-bottom: 1rem;
}

.page-content ul,
.page-content ol {
  margin-bottom: 1rem;
  padding-left: 2rem;
}

.page-content li {
  margin-bottom: 0.5rem;
}

.page-content blockquote {
  border-left: 4px solid #667eea;
  padding-left: 1rem;
  margin: 1.5rem 0;
  font-style: italic;
  color: #666;
}

.page-content code {
  background: #f5f5f5;
  padding: 0.2rem 0.4rem;
  border-radius: 0.25rem;
  font-family: 'Monaco', 'Consolas', monospace;
  font-size: 0.9rem;
}

.page-content pre {
  background: #f5f5f5;
  padding: 1rem;
  border-radius: 0.5rem;
  overflow-x: auto;
  margin: 1rem 0;
}

.page-content pre code {
  background: none;
  padding: 0;
}
</style>